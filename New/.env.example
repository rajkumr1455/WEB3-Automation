# Environment Configuration for Web3 Hunter

# ============================================
# Database Configuration (Optional)
# ============================================
# Uncomment to enable PostgreSQL persistence
# If not set, system uses InMemoryAdapter
# DATABASE_URL=postgresql://web3hunter:SecurePassword123@postgres:5432/web3_scans

# ============================================
# RQ Job Queue Configuration
# ============================================
# Redis connection for RQ worker
RQ_BROKER_URL=redis://redis:6379/0

# RQ Worker configuration
RQ_WORKER_COUNT=2
RQ_JOB_TIMEOUT=3600
RQ_RESULT_TTL=86400

# ============================================
# Service URLs (Internal Docker Network)
# ============================================
LLM_ROUTER_URL=http://llm-router:8000
RECON_AGENT_URL=http://recon-agent:8002
STATIC_AGENT_URL=http://static-agent:8003
FUZZING_AGENT_URL=http://fuzzing-agent:8004
MONITORING_AGENT_URL=http://monitoring-agent:8005
TRIAGE_AGENT_URL=http://triage-agent:8006
REPORTING_AGENT_URL=http://reporting-agent:8007
ADDRESS_SCANNER_URL=http://address-scanner:8008

# ============================================
# Blockchain RPC Endpoints (with Failover)
# ============================================
# Primary RPC endpoints (use Alchemy/Infura/etc)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
BASE_RPC_URL=https://mainnet.base.org

# Backup RPC endpoints (for automatic failover)
ETHEREUM_RPC_URL_BACKUP=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
BSC_RPC_URL_BACKUP=https://rpc.ankr.com/bsc
POLYGON_RPC_URL_BACKUP=https://polygon-mainnet.public.blastapi.io
ARBITRUM_RPC_URL_BACKUP=https://rpc.ankr.com/arbitrum
OPTIMISM_RPC_URL_BACKUP=https://rpc.ankr.com/optimism
BASE_RPC_URL_BACKUP=https://base.publicnode.com

# Legacy environment variable names (for backward compatibility)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ============================================
# Blockchain API Keys
# ============================================
# Etherscan family (same key works for all)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_etherscan_api_key_here
ARBISCAN_API_KEY=your_etherscan_api_key_here
OPTIMISM_API_KEY=your_etherscan_api_key_here
BASESCAN_API_KEY=your_etherscan_api_key_here

# ============================================
# Security & Features
# ============================================
# Allow force decompilation for unverified contracts
ALLOW_FORCE_DECOMPILE=false

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# Circuit breaker threshold
CIRCUIT_BREAKER_FAIL_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
ENABLE_JSON_LOGS=true

# Prometheus metrics
PROMETHEUS_PORT=9090

# ============================================
# LLM Configuration
# ============================================
# Ollama (local LLM)
OLLAMA_HOST=http://host.docker.internal:11434

# Claude API (optional, for cloud reasoning)
# CLAUDE_API_KEY=your_claude_api_key_here

# ============================================
# Development / Testing
# ============================================
# Set to 'true' to force InMemory adapter (ignores DATABASE_URL)
FORCE_INMEMORY=false

# Enable debug mode
DEBUG=false
